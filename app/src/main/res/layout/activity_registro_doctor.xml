<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        tools:context=".RegistroDoctor">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:text="Registro de médico" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/txt"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Nombre" />

        <EditText
            android:id="@+id/nombreMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/gray"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/nombreMedico"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Especialización" />

        <Spinner
            android:id="@+id/spinner_especializacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_spinner"
            android:padding="15dp"
            android:layout_below="@+id/text1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/spinner_especializacion"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Correo electrónico" />

        <EditText
            android:id="@+id/correoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/gray"
            android:textSize="20dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/correoMedico"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/contrasenaMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/gray"
            android:textSize="20dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/contrasenaMedico"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Télefono de contacto" />

        <EditText
            android:id="@+id/telefonoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/gray"
            android:textSize="20dp"
            android:inputType="phone" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/telefonoMedico"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Horario de servicio" />

        <Button
            android:id="@+id/horarioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:padding="18dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:backgroundTint="@color/gray"
            android:textAlignment="textStart"
            app:cornerRadius="18dp"
            android:textSize="20dp"
            android:text="Horario no seleccionado" />


        <!-- Botón para registrar médico -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_registrarMedico"
            android:layout_below="@id/horarioButton"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/aqua"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="22dp"
            app:cornerRadius="18dp"
            android:textColor="@color/white"
            android:text="REGISTRAR"/>

    </RelativeLayout>
</ScrollView>
