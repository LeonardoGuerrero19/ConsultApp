<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioMedicoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearBotones"
        android:padding="16dp">

        <!-- Título de la actividad -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citas Programadas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- TextView donde se mostrarán las citas del médico -->
        <TextView
            android:id="@+id/tvCitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí aparecerán las citas"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- Botón para redireccionar a MedicoActivity -->
    <Button
        android:id="@+id/btn_horarios_medico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrar Horarios"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@id/linearBotones"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/btn_cerrarS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_horarios_medico"
        android:text="Cerrar sesión"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
