<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bkg">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_remove_24"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/aqua"
        android:textSize="26dp"
        android:text="Agregar especialidad" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Nombre" />

    <EditText
        android:id="@+id/nombre_especialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/gray"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="DescripciÃ³n" />

    <EditText
        android:id="@+id/descripcion_especialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/gray"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnAgregarEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/aqua"
        app:cornerRadius="18dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="22dp"
        android:text="AGREGAR"
        android:textColor="@color/white" />

</LinearLayout>