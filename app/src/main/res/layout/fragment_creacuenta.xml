<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/btninicio"
        android:layout_width="382dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="641dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="#68B0AB"
        android:text="REGISTRARSE"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="25dp" />


    <Button
        android:id="@+id/btnregi"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="113dp"
        android:background="@android:color/transparent"
        android:text="Inicia seción"
        android:textColor="#68B0AB"
        android:textSize="13sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/idcontra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="483dp"
        android:layout_marginEnd="289dp"
        android:text="Contraseña"
        android:textColor="#0F0E0E"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/idnumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idcreate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="227dp"
        android:text="Correo electrónico"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/idnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idcreate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="316dp"
        android:text="Nombre"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="normal" />




<TextView
        android:id="@+id/idcreate"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="118dp"
        android:text="Crea una cuenta"
        android:textColor="#68B0AB"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="219dp"
        android:layout_height="191dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="98dp"
        android:src="@drawable/regi" />


    <TextView
        android:id="@+id/idnotiene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="580dp"
        android:text="¿Tienes una cuenta?"
        android:textColor="#090909"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="367dp"
        android:layout_height="68dp"
        android:layout_below="@+id/idnombre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="23dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="@color/teal_700"
        app:boxStrokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idnombre">



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/idtext2"
        android:layout_width="357dp"
        android:layout_height="55dp"
        android:layout_below="@+id/idnombre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="31dp"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="249dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="367dp"
        android:layout_height="68dp"
        android:layout_below="@+id/idnumero"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="23dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="@color/teal_700"
        app:boxStrokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idnumero">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idtext3"
            android:layout_width="357dp"
            android:layout_height="55dp"
            android:layout_below="@+id/idnumero"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="31dp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="249dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="367dp"
        android:layout_height="68dp"
        android:layout_below="@+id/idcontra"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="23dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="@color/teal_700"
        app:boxStrokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idcontra">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idtext4"
            android:layout_width="357dp"
            android:layout_height="55dp"
            android:layout_below="@+id/idcontra"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="31dp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="249dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/boxacept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idnotiene"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="344dp"
        android:text="" />

    <Button
        android:id="@+id/btntermcond"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/idnotiene"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="141dp"
        android:background="@android:color/transparent"
        android:text="Terminos y Condiciones"
        android:textColor="#68B0AB"
        android:textSize="13sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
