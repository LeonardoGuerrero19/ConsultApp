<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:context=".EditarPersonalMedico">

  <TextView
      android:id="@+id/medicoTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="20dp"
      android:textSize="26dp"
      android:fontFamily="@font/montserrat_bold"
      android:textColor="@color/black"
      android:clickable="true"
      android:focusable="true" />

  <View
      android:id="@+id/divider"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/aqua" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="15dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:text="Nombre" />

  <EditText
      android:id="@+id/editNombre"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:background="@drawable/rounded"
      android:backgroundTint="@color/gray"
      android:textSize="20dp" />

  <TextView
      android:id="@+id/text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="15dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:text="Especialización" />

  <Spinner
      android:id="@+id/spinner_especializacion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bkg_spinner"
      android:padding="20dp"
      android:layout_below="@+id/text1" />

  <TextView
      android:id="@+id/text1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="15dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:text="Télefono de contacto" />

  <EditText
      android:id="@+id/editTelefono"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:background="@drawable/rounded"
      android:backgroundTint="@color/gray"
      android:textSize="20dp" />

  <TextView
      android:id="@+id/text2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="15dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:text="Horario de servicio" />

  <Button
      android:id="@+id/editHorario"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp"
      android:fontFamily="@font/montserrat_medium"
      android:textColor="@color/black"
      android:backgroundTint="@color/gray"
      android:textAlignment="textStart"
      app:cornerRadius="18dp"
      android:textSize="20dp"
      android:text="Horario no seleccionado" />


  <!-- Botón de guardar cambios -->
  <Button
      android:id="@+id/btnGuardarCambios"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginBottom="20dp"
      android:padding="10dp"
      android:backgroundTint="@color/aqua"
      android:fontFamily="@font/montserrat_bold"
      app:cornerRadius="18dp"
      android:textSize="22dp"
      android:textColor="@color/white"
      android:text="GUARDAR"/>

  </LinearLayout>