<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciopActivity">

    <!-- Texto de bienvenida -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="Hola, bienvenido"/>

    <!-- Contenedor para mostrar las citas -->
    <LinearLayout
        android:id="@+id/citas_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <!-- Contenedor para los botones din치micos (servicios) -->
    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/citas_container"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <!-- Bot칩n de cerrar sesi칩n ubicado en la parte inferior -->
    <Button
        android:id="@+id/btn_cerrarS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesi칩n"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

</RelativeLayout>
