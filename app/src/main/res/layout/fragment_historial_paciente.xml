<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialPacienteFragment">

    <!-- Título del Historial Clínico -->
    <TextView
        android:id="@+id/HpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial Clínico"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Campo para ingresar el número de cuenta -->
    <EditText
        android:id="@+id/num_cuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese el número de cuenta"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_search"
        android:fontFamily="@font/montserrat"
        android:drawableEnd="@drawable/ic_histpaciente"
        android:paddingStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/HpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para mostrar los resultados del historial -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/num_cuenta"
        app:layout_constraintBottom_toTopOf="@id/botom_navigation_medico"
        android:layout_marginTop="8dp" />

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botom_navigation_medico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu_medico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/navigation_item_color"
        app:itemTextColor="@color/navigation_item_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
