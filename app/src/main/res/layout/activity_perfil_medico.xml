<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_perfilmedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20sp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded2"
        android:backgroundTint="@color/gray">

        <LinearLayout
            android:id="@+id/txt"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/aqua"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/doc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_medico"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/medico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_marginHorizontal="20dp"
            android:text="Dra. Fátima"
            android:layout_weight="2"
            app:layout_constraintLeft_toRightOf="@+id/txt"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/especialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Patología"
            app:layout_constraintLeft_toRightOf="@+id/txt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medico"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/txt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/especialidad">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calif"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calif"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calif"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calif"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_descalif"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/datosmedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_below="@id/header_perfilmedico" >

        <TextView
            android:id="@+id/txtdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:paddingBottom="5dp"
            android:textSize="18dp"
            android:text="Descripción:" />

        <TextView
            android:id="@+id/descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingBottom="8dp"
            android:textSize="18dp"
            android:text="bla bla bla" />

        <TextView
            android:id="@+id/txthorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:paddingBottom="5dp"
            android:textSize="18dp"
            android:text="Horarios de servicio:" />

        <TextView
            android:id="@+id/horarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingBottom="8dp"
            android:textSize="18dp"
            android:text="10:00 am - 14:00 pm" />

        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:paddingBottom="5dp"
            android:textSize="18dp"
            android:text="Télefono de contacto:" />

        <TextView
            android:id="@+id/contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="18dp"
            android:text="314-103-5-610" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/datosmedico"
        android:background="@color/aqua"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp" />



</RelativeLayout>