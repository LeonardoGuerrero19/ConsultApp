<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F5F5F5"
android:padding="16dp"
tools:context=".InformeMedicoActivity">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

  <!-- Contenedor del título-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginBottom="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Informe Médico"
        android:textSize="26sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#000000" />
  </LinearLayout>

  <!-- Línea divisoria -->
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#DADADA"
      android:layout_marginBottom="16dp" />

  <!-- Contenedor del número de cuenta -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="16dp"
      android:gravity="center"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:layout_marginHorizontal="8dp"
      android:clipToOutline="true"
      android:elevation="4dp"
      android:backgroundTintMode="add"
      android:layout_gravity="center">

    <TextView
        android:id="@+id/tvCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Núm de cuenta: 2889845673"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#000000"
        android:gravity="center" />
  </LinearLayout>


  <!-- Peso y Altura -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="16dp">

    <!-- Peso -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Peso:"
          android:fontFamily="@font/montserrat_bold"
          android:textSize="14sp"
          android:textColor="#555555"/>

      <EditText
          android:id="@+id/peso"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Kg"
          android:padding="12dp"
          android:textSize="16sp"
          android:textColor="#000000"
          android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Espaciado -->
    <View
        android:layout_width="16dp"
        android:layout_height="wrap_content" />

    <!-- Altura -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Altura:"
          android:fontFamily="@font/montserrat_bold"
          android:textSize="14sp"
          android:textColor="#555555"/>
      <EditText
          android:id="@+id/altura"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Cm"
          android:padding="12dp"
          android:textSize="16sp"
          android:textColor="#000000"
          android:layout_marginTop="16dp" />
    </LinearLayout>
  </LinearLayout>

  <!-- Motivo de consulta -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Motivo de consulta:"
      android:fontFamily="@font/montserrat_bold"
      android:textSize="14sp"

      android:textColor="#555555"/>
  <EditText
      android:id="@+id/etMotivoConsulta"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:textColor="#000000"
      android:layout_marginTop="16dp" />

  <!-- Principio y evolución -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Principio y evolución de padecimiento:"
      android:textSize="14sp"
      android:fontFamily="@font/montserrat_bold"
      android:textColor="#555555"/>
  <EditText
      android:id="@+id/etPrincipioEvolucion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:layout_marginTop="16dp"
      android:textColor="#000000"
      android:minLines="3"
      android:gravity="top" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Medicamentos recetados:"
      android:textSize="14sp"
      android:fontFamily="@font/montserrat_bold"
      android:textColor="#555555"/>

  <!-- Medicamentos recetados -->
  <EditText
      android:id="@+id/etMedicamentosRecetados"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:layout_marginTop="16dp"
      android:textColor="#000000"
      android:minLines="3"
      android:gravity="top" />

  <!-- Botón Guardar -->
  <Button
      android:id="@+id/btnGuardar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="GUARDAR"
      android:textColor="#FFFFFF"
      android:backgroundTint="@color/aqua"
      android:fontFamily="@font/montserrat_bold"
      android:layout_marginTop="24dp"
      android:textSize="22sp"
      android:padding="12dp" />
</LinearLayout>
</ScrollView>
