<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".ui.horarios.HorariosFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="26dp"
        android:text="Horarios"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:background="@drawable/rounded"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/calendarView"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="22dp"
        android:text="Horarios disponibles"/>

    <!-- LinearLayout para contener los botones -->
    <LinearLayout
        android:id="@+id/linearLayoutHorarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:orientation="vertical" />

    <!-- BotÃ³n para guardar los datos -->
    <Button
        android:id="@+id/btnGuardarHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutHorarios"
        android:text="Guardar Horario"
        android:layout_marginTop="16dp"/>

</RelativeLayout>