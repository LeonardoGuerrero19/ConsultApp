<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    tools:context=".ui.horarios.HorariosFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"> <!-- AÃ±adir padding inferior -->

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="26dp"
        android:textColor="@color/black"
        android:text="Asignar mis horarios"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:layout_gravity="center"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded"
        android:theme="@style/CalenderViewCustom"
        android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/calendarView"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:text="Horarios disponibles"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:paddingBottom="130dp"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/linearLayoutHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnGuardarHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:backgroundTint="@color/aqua"
        app:cornerRadius="18dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="22dp"
        android:text="GUARDAR"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"/>
</RelativeLayout>
