<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa del borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@android:color/black" />
            <corners android:radius="8dp" /> <!-- Ajusta el radio según necesites -->
        </shape>
    </item>

    <!-- Capa de fondo -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Cambia el color según necesites -->
            <corners android:radius="8dp" /> <!-- Debe coincidir con el radio del borde -->
        </shape>
    </item>
</layer-list>
