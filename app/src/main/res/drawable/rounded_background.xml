<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo del componente -->
    <solid android:color="#DDE6E7"/>

    <!-- Borde opcional alrededor del componente -->
    <stroke
        android:width="2dp"
        android:color="#DDE6E7" />

    <!-- Definir el radio de las esquinas -->
    <corners android:radius="16dp"/>

    <!-- Margen opcional dentro del componente -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
