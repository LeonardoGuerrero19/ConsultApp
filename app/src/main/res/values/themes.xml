<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConsultApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/navigation_item_color</item>
        <item name="android:textColor">#000000</item>

        <!-- Estilo de botón predeterminado -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@drawable/selector_text</item>
        <!-- Puedes agregar más propiedades de estilo aquí -->
        <item name="android:padding">8dp</item> <!-- Ajustar padding según sea necesario -->
    </style>
</resources>